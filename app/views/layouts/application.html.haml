!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "JBS Social"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="/assets/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="/assets/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="/assets/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="/assets/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="favicon.ico" rel="shortcut icon")


  %body
    #big-big-wrapper
      %nav.navbar.navbar-inverse.navbar-fluid-top{:style => 'top: 0'}
        .navbar-inner
          .container-fluid
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => root_url}
              = image_tag 'logo.png', :width => 24, :height => 24
              JBS Social
            %nav.container-fluid.nav-collapse
              %ul.nav
                %li= link_to "Link 1", "/path1"
                %li= link_to "Link 2", "/path2"
                %li= link_to "Link 3", "/path3"
              = render 'shared/usernav'
              = render 'shared/topsearch'

      .container
        .row-fluid
          .span7#content-wrapper
            = bootstrap_flash
            = yield
          %aside.span3.sidebar
            = render 'users/sidebar'


        %footer
          %p.copyright
            Copyright &copy;
            %a(href="http://www.jbslabs.com") JBS Labs
            2013 -
            =t('text.some_rights_reserved')
            |
            !=t('text.licensed_under_terms', :license => 'CreativeCommons Attribution-NonCommercial-NoDerivs 3.0', :link => 'http://creativecommons.org/licenses/by-nc-nd/3.0/')


    #modalHelper.modal.hide.fade(tabindex="-1" role="dialog" aria-hidden="true" style="display: none")
      .modal-header
        %button.close(type="button" data-dismiss="modal" aria-hidden="true") x
        %h3.modal-title
      .modal-body
        %p &nbsp;
      .modal-footer
        %button.btn.btn-primary(data-dismiss="modal" aria-hidden="true") OK

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
