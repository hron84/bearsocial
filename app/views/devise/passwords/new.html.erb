<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  <div class="form-signin-heading">
    <h2><%= t('devise.passwords.forgot_your_password') %></h2>
  </div>
  <%= bootstrap_flash %>

  <%= f.email_field :email, :placeholder => localized_attribute_name(User, :email), :autofocus => true %>

  <p><%= t('devise.passwords.button_click_instructions') %></p>
  <%= f.submit t('devise.passwords.send_it'), :class => 'btn btn-large btn-primary' %>

  <%= render 'devise/shared/links' %>
<% end -%>
