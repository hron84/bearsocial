
<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :class => 'form-signin' }) do |f| %>
  <div class="form-signin-heading"><h2>Resend unlock instructions</h2></div>

  <%= f.email_field :email, :autofocus => true,  :placeholder => localized_attribute_name(User, :email) %>

  <%= f.submit "Resend unlock instructions", :class => 'btn btn-primary' %>
<%= render "devise/shared/links" %>
<% end %>

