# Ignore bundler config
/.bundle

# Ignore Vagrant state file
/.vagrant

# Ignore the default SQLite database.
/db/*.db

# Ignore db schema
/db/schema.rb
/db/**.sql
/config/database.yml
/config/redis.yml

# Ignore settings
/config/settings.yml
/config/thin.yml

# Ignore all logfiles and tempfiles.
/log/*.log
/log/localeapp.yml
/tmp

# Ignore platform-related stuffs
.DS_Store
*~

# Ignore IDE-related autogenerated stuffs
/.idea
/nbproject/private/
/*.sublime-workspace

# Ignore temp files
/.sass-cache
*.tmp
*.orig
*.rej

# Ignore Rubinius compiled stuffs
*.rbc
/.rbx
/.chef/.rbx

# Ignore CI reports
/log/reports
/spec/reports
/log/rcov.dat
/coverage/

# Ignore compiled assets
/public/assets

# Ignore librarian-managed cookbooks
/cookbooks/
